{
  "name": "pictotale-backend",
  "version": "1.0.0",
  "description": "PictoTale Backend API - AI-powered children's storytelling platform",
  "main": "src/server.js",
  "keywords": [
    "pictotale",
    "storytelling",
    "children",
    "ai",
    "firebase",
    "mongodb",
    "nodejs",
    "api"
  ],
  "author": "PictoTale Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pictotale/backend"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:auth": "jest --testPathPattern=auth",
    "test:stories": "jest --testPathPattern=stories",
    "test:users": "jest --testPathPattern=users",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "seed": "node src/seeders/story_seeders.js",
    "seed:clear": "node -e \"require('./src/seeders/story_seeders').clearStoryData()\"",
    "seed:update": "node -e \"require('./src/seeders/story_seeders').updateStoryTypes()\"",
    "docs:serve": "swagger-ui-serve docs/swagger.json",
    "health": "curl http://localhost:3001/api/auth/health"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.17.3",
    "express-validator": "^7.2.1",
    "firebase-admin": "^11.11.0",
    "form-data": "^4.0.3",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "nodemailer": "^6.10.1",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.5.6",
    "sharp": "^0.34.3",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
